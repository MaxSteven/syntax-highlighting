<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Atelier Cave">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#9b8eaf" background="#302046"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#897b9d"/>
  <style name="CurrentLine" background="#6e588d"/>
  <style name="LineNumber" foreground="#6e588d"/>
  <style name="CurrentLineNumber" foreground="#897b9d" bold="true"/>
  <style name="SearchResult" background="3c2956"/>
  <style name="Parentheses" background="#624e7e" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#6e588d"/>
  <style name="Occurrences.Rename" background="#897b9d"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#bf674a"/>

  <!-- language primitives -->
  <style name="Number" foreground="#bf674a"/>
  <style name="String" foreground="#74875a"/>
  <style name="Keyword" foreground="#955ae7"/>
  <style name="Operator" foreground="#9b8eaf"/>
  <style name="Preprocessor" foreground="#6577d2"/>
  <style name="Label" foreground="#cf598a"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a08f3b"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6577d2"/>
  <style name="VirtualMethod" foreground="#6577d2" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e4dfec"/>
  <style name="Local" foreground="#9b8eaf"/>
  <style name="Static" foreground="#9b8eaf"/>
  <style name="JsScopeVar" foreground="#9b8eaf" italic="true"/>
  <style name="JsImportVar" foreground="#9b8eaf" italic="true"/>
  <style name="JsGlobalVar" foreground="#9b8eaf" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#624e7e"/>

  <!-- comments -->
  <style name="Comment" foreground="#6e588d"/>
  <style name="DisabledCode" foreground="#6e588d"/>
  <style name="Doxygen.Comment" foreground="#6e588d"/>
  <style name="Doxygen.Tag" foreground="#6e588d"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#955ae7"/>
  <style name="Binding" foreground="#cf598a"/>
  <style name="QmlExternalId" foreground="#6577d2" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6577d2" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#955ae7"/>
  <style name="DiffLocation" foreground="#6577d2"/>
  <style name="AddedLine" foreground="#74875a"/>
  <style name="RemovedLine" foreground="#a08f3b"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#955ae7"/>
  <style name="DiffContextLine" foreground="#6577d2"/>
  <style name="DiffSourceLine" foreground="#74875a"/>
  <style name="DiffSourceChar" foreground="#a08f3b" background="#3c2956"/>
  <style name="DiffDestLine" foreground="#74875a"/>
  <style name="DiffDestChar" foreground="#a08f3b" background="#3c2956"/>
</style-scheme>
