/* Base16 <%= @scheme %> Dark -Theme */
/* by <%= @author %> */
/* Original Base16 color scheme by Chris Kempson (https://github.com/chriskempson/base16) */
/* https://github.com/jmblog/color-themes-for-highlightjs */

/* base16-<%= @slug %>-dark-comment */
.hljs-comment,
.hljs-title {
  color: #<%= @base["04"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-red */
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: #<%= @base["08"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-orange */
.hljs-number,
.hljs-preprocessor,
.hljs-pragma,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: #<%= @base["09"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-yellow */
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: #<%= @base["0A"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-green */
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: #<%= @base["0B"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-aqua */
.css .hljs-hexcolor {
  color: #<%= @base["0C"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-blue */
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .function .title,
.ruby .hljs-title .keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: #<%= @base["0D"]["hex"] %>;
}

/* base16-<%= @slug %>-dark-purple */
.hljs-keyword,
.javascript .hljs-function {
  color: #<%= @base["0E"]["hex"] %>;
}

.hljs {
  display: block;
  background: #<%= @base["01"]["hex"] %>;
  color: #<%= @base["05"]["hex"] %>;
  padding: 0.5em;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
