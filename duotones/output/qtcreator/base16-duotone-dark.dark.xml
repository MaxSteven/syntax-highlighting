<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Duotone-Dark">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#a391fd" background="#2a2734"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#857ab8"/>
  <style name="CurrentLine" background="#746e91"/>
  <style name="LineNumber" foreground="#746e91"/>
  <style name="CurrentLineNumber" foreground="#857ab8" bold="true"/>
  <style name="SearchResult" background="413d51"/>
  <style name="Parentheses" background="#5c5874" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#746e91"/>
  <style name="Occurrences.Rename" background="#857ab8"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#c07830"/>

  <!-- language primitives -->
  <style name="Number" foreground="#c07830"/>
  <style name="String" foreground="#7c756e"/>
  <style name="Keyword" foreground="#988dce"/>
  <style name="Operator" foreground="#a391fd"/>
  <style name="Preprocessor" foreground="#d49454"/>
  <style name="Label" foreground="#7769bf"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ce853b"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#d49454"/>
  <style name="VirtualMethod" foreground="#d49454" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#c4b8fe"/>
  <style name="Local" foreground="#a391fd"/>
  <style name="Static" foreground="#a391fd"/>
  <style name="JsScopeVar" foreground="#a391fd" italic="true"/>
  <style name="JsImportVar" foreground="#a391fd" italic="true"/>
  <style name="JsGlobalVar" foreground="#a391fd" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#5c5874"/>

  <!-- comments -->
  <style name="Comment" foreground="#746e91"/>
  <style name="DisabledCode" foreground="#746e91"/>
  <style name="Doxygen.Comment" foreground="#746e91"/>
  <style name="Doxygen.Tag" foreground="#746e91"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#988dce"/>
  <style name="Binding" foreground="#7769bf"/>
  <style name="QmlExternalId" foreground="#d49454" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#d49454" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#988dce"/>
  <style name="DiffLocation" foreground="#d49454"/>
  <style name="AddedLine" foreground="#7c756e"/>
  <style name="RemovedLine" foreground="#ce853b"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#988dce"/>
  <style name="DiffContextLine" foreground="#d49454"/>
  <style name="DiffSourceLine" foreground="#7c756e"/>
  <style name="DiffSourceChar" foreground="#ce853b" background="#413d51"/>
  <style name="DiffDestLine" foreground="#7c756e"/>
  <style name="DiffDestChar" foreground="#ce853b" background="#413d51"/>
</style-scheme>
