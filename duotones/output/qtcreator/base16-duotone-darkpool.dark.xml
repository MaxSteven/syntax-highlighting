<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Duotone-DarkPool">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#a57ef1" background="#1e1d20"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#807792"/>
  <style name="CurrentLine" background="#686175"/>
  <style name="LineNumber" foreground="#686175"/>
  <style name="CurrentLineNumber" foreground="#807792" bold="true"/>
  <style name="SearchResult" background="37343c"/>
  <style name="Parentheses" background="#4f4b58" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#686175"/>
  <style name="Occurrences.Rename" background="#807792"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#b46e3c"/>

  <!-- language primitives -->
  <style name="Number" foreground="#b46e3c"/>
  <style name="String" foreground="#b28c70"/>
  <style name="Keyword" foreground="#a089cd"/>
  <style name="Operator" foreground="#a57ef1"/>
  <style name="Preprocessor" foreground="#d38650"/>
  <style name="Label" foreground="#7f5bc8"/>

  <!-- types, classes -->
  <style name="Type" foreground="#c87941"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#d38650"/>
  <style name="VirtualMethod" foreground="#d38650" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#d4c2fa"/>
  <style name="Local" foreground="#a57ef1"/>
  <style name="Static" foreground="#a57ef1"/>
  <style name="JsScopeVar" foreground="#a57ef1" italic="true"/>
  <style name="JsImportVar" foreground="#a57ef1" italic="true"/>
  <style name="JsGlobalVar" foreground="#a57ef1" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#4f4b58"/>

  <!-- comments -->
  <style name="Comment" foreground="#686175"/>
  <style name="DisabledCode" foreground="#686175"/>
  <style name="Doxygen.Comment" foreground="#686175"/>
  <style name="Doxygen.Tag" foreground="#686175"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a089cd"/>
  <style name="Binding" foreground="#7f5bc8"/>
  <style name="QmlExternalId" foreground="#d38650" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#d38650" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a089cd"/>
  <style name="DiffLocation" foreground="#d38650"/>
  <style name="AddedLine" foreground="#b28c70"/>
  <style name="RemovedLine" foreground="#c87941"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a089cd"/>
  <style name="DiffContextLine" foreground="#d38650"/>
  <style name="DiffSourceLine" foreground="#b28c70"/>
  <style name="DiffSourceChar" foreground="#c87941" background="#37343c"/>
  <style name="DiffDestLine" foreground="#b28c70"/>
  <style name="DiffDestChar" foreground="#c87941" background="#37343c"/>
</style-scheme>
