<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Duotone-DarkSea">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#91c1f8" background="#1d262f"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#75a0d1"/>
  <style name="CurrentLine" background="#6e88a6"/>
  <style name="LineNumber" foreground="#6e88a6"/>
  <style name="CurrentLineNumber" foreground="#75a0d1" bold="true"/>
  <style name="SearchResult" background="303f4f"/>
  <style name="Parentheses" background="#556e8b" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#6e88a6"/>
  <style name="Occurrences.Rename" background="#75a0d1"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#30c090"/>

  <!-- language primitives -->
  <style name="Number" foreground="#30c090"/>
  <style name="String" foreground="#708f85"/>
  <style name="Keyword" foreground="#85beff"/>
  <style name="Operator" foreground="#91c1f8"/>
  <style name="Preprocessor" foreground="#54d4a9"/>
  <style name="Label" foreground="#52a3ff"/>

  <!-- types, classes -->
  <style name="Type" foreground="#3bce9d"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#54d4a9"/>
  <style name="VirtualMethod" foreground="#54d4a9" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#b8d9fe"/>
  <style name="Local" foreground="#91c1f8"/>
  <style name="Static" foreground="#91c1f8"/>
  <style name="JsScopeVar" foreground="#91c1f8" italic="true"/>
  <style name="JsImportVar" foreground="#91c1f8" italic="true"/>
  <style name="JsGlobalVar" foreground="#91c1f8" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#556e8b"/>

  <!-- comments -->
  <style name="Comment" foreground="#6e88a6"/>
  <style name="DisabledCode" foreground="#6e88a6"/>
  <style name="Doxygen.Comment" foreground="#6e88a6"/>
  <style name="Doxygen.Tag" foreground="#6e88a6"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#85beff"/>
  <style name="Binding" foreground="#52a3ff"/>
  <style name="QmlExternalId" foreground="#54d4a9" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#54d4a9" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#85beff"/>
  <style name="DiffLocation" foreground="#54d4a9"/>
  <style name="AddedLine" foreground="#708f85"/>
  <style name="RemovedLine" foreground="#3bce9d"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#85beff"/>
  <style name="DiffContextLine" foreground="#54d4a9"/>
  <style name="DiffSourceLine" foreground="#708f85"/>
  <style name="DiffSourceChar" foreground="#3bce9d" background="#303f4f"/>
  <style name="DiffDestLine" foreground="#708f85"/>
  <style name="DiffDestChar" foreground="#3bce9d" background="#303f4f"/>
</style-scheme>
